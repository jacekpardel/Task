@model LecturerModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add new</h2>
            <hr/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Name class="p-0"></label>
            <input asp-for=Name type="text" class="form-control"/>
        </div>
         <div class="mb-3 row">
             <label asp-for=Email class="p-0"></label>
             <input asp-for=Email type="text" class="form-control"/>
         </div>
        <div class="mb-3 row">
            <label asp-for=Phone class="p-0"></label>
            <input asp-for=Phone type="text" class="form-control" />
        </div>

         <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control" style="width:150px">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Lecturers" asp-action="Index" class="btn btn-outline-secondary form-control" style="width:150px">Back to list</a>
            </div>
     </div>
     </div>
</form>   